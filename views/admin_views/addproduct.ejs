<%- include('partials') %>

    <div class="" style=" margin-left: 240px; width:auto; padding-top: 30px; padding-left: 20px;">

        <div class="col-md-8"
            style="border: 1px solid rgb(213, 213, 213); border-radius: 5px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="col d-flex justify-content-center">
                <h1>Add Product</h1>
            </div>
            <form action="/admin/product/addproduct" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="col">

                    <div class="row" style="padding: 10px;">
                        <div class="col">
                            <div class="form-group">
                                <label for="productName">Product Name</label>
                                <input type="text" class="form-control" placeholder="Product Name" id="productName"
                                    name="productName" required>
                            </div>
                        </div>
                        <div class="col">

                            <label for="category">Category</label>
                            <select class="form-control" id="category" name="category" required>
                                <option value="" disabled selected>Select a category</option>
                                <% categoryList.forEach(category=> { %>
                                    <option value="<%= category._id %>">
                                        <%= category.categoryName %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row" style="padding: 10px;">
                    <div class="col">
                        <div class="form-group">
                            <label for="price">Purchase Rate</label>
                            <input type="number" class="form-control" placeholder="Purchase Rate" id="purchaseRate"
                                name="purchaseRate" required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="quantity">Selling Price</label>
                            <input type="number" class="form-control" placeholder="Price" id="price" name="price"
                                required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="brand">Quantity</label>
                            <input type="number" class="form-control" id="quantity" placeholder="Quantity"
                                name="quantity" required>
                        </div>
                    </div>

                </div>

                <div class="row" style="padding: 10px;">
                    <div class="col">
                        <div class="form-group">
                            <label for="brand">Brand</label>
                            <input type="text" class="form-control" placeholder="Brand" id="brand" name="brand"
                                required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="colour">Colour</label>
                            <input type="text" class="form-control" placeholder="Colour" id="colour" name="colour"
                                required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="offer">Offer</label>
                            <input type="number" class="form-control" placeholder="Offer Percentage" name="offer" id="offer">
                        </div>
                    </div>

                </div>
                <div class="form-group " style="padding: 10px;">
                    <label for="images">Images</label>
                    <input type="file" class="form-control" id="images" name="images" multiple>
                </div>


                <div class="form-group" style="padding: 10px;">
                    <label for="quantity">Additional Details</label>
                    <textarea class="form-control" id="additionalinfo" placeholder="Additional Details"
                        name="additionalInfo" rows="4" required> </textarea>
                </div>
            </div>
                <div class="d-flex justify-content-center" style="padding: 10px;">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                    </form>
                </div>

        </div>
    </div>

    <%- include ('footer') %>