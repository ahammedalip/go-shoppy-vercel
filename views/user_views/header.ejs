    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">

      <i class="fa-solid fa-bars" style="color: #ffffff;"></i>

    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/userhome">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="/products">Products</a>
        <a class="nav-item nav-link" href="/profile">Profile</a>

        <a class="nav-item nav-link" href="#">About</a>
      </div>
    </div>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/cart">
          <i class='bx bx-cart' style="font-size: 40px; position: relative;">
          <% if(user){ %>
          <span style="position: absolute; top: 0; right: 0; border-radius: 50%;width: 20px;height: 20px; font-size: 15px; background-color: red; color: white; padding: 4px 8px;" id="cart-counter" class="badge badge-danger">
           
              <%= user.cart.length %></span>
              <% }else{ %>
                <span style="position: absolute; top: 0; right: 0; border-radius: 50%;width: 20px;height: 20px; font-size: 15px; background-color: red; color: white; padding: 4px 8px;" id="cart-counter" class="badge badge-danger">
           
                  0</span>
             <% } %></i>
      </a>
      <a class="nav-item nav-link" href="/wishlist">
        <i class='bx bx-heart' style="font-size: 38px; position: relative;">
          <% if(user && user.wishlist.length > 0) { %>
            <span style="position: absolute; top: 0; right: 0; border-radius: 50%;width: 20px;height: 20px; font-size: 15px; background-color: red; color: white; padding: 4px 8px;" id="wishlist-counter" class="">
              <%= user.wishlist.length %>
            </span>
          <% }else{ %>
            <span style="position: absolute; top: 0; right: 0; border-radius: 50%;width: 20px;height: 20px; font-size: 15px; background-color: red; color: white; padding: 4px 8px;" id="wishlist-counter" class="">
              0
            </span>
            <% } %>
        </i>
      </a>
      
      </div>
    </div>
