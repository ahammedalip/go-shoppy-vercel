<%- include('header') %>

</head>
<body style="background-image: url(/images/2202_w039_n003_110b_p1_110.jpg); background-size: cover;">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="card" style="box-shadow: 1px 6px 10px rgba(0, 0, 0, 0.1);border-radius: 10px;background: transparent; backdrop-filter: blur(15px);">
          <div >
            <br>
            <h4 class="text-center">Sign Up for Go Shoppy</h4>
          </div>
          <style>
            .card {
            margin-top: 0px;
            
            
            
        }
          </style>
          <div class="card-body">
            <form action="/signup" method="POST"> <!-- Update the action accordingly -->

              <% if (errorMessage) { %>
                <div class="alert alert-danger">
                    <%= errorMessage %>
                </div>
                <% } %>
                <div class="row">
                  <div class="col form-group">
                    <!-- <label for="firstName">First Name</label> -->
                    <input type="text" class="form-control" placeholder="First Name" id="firstName" name="firstName" required>
                  </div>
                  <div class="col form-group">
                    <!-- <label for="lastName">Last Name</label> -->
                    <input type="text" class="form-control" placeholder="Last Name" id="lastName" name="lastName" required>
                  </div>
                </div>
             
              <div class="form-group">
                <!-- <label for="email">Email</label> -->
                <input type="email" class="form-control" placeholder="Email Id" id="email" name="email" required>
              </div>
              <div class="form-group">
                <!-- <label for="mobile">Mobile</label> -->
                <input type="tel" class="form-control" placeholder="Mobile No." id="mobile" name="mobile" required>
              </div>
              <div class="form-group">
                <!-- <label for="password">Password</label> -->
                <input type="password" class="form-control" placeholder="Password" id="password" name="password" required>
              </div>
              <div class="form-group">
                <!-- <label for="password">Password</label> -->
                <input type="text" class="form-control" placeholder="Referal Code" id="referral" name="referral">
              </div>
              <div class="col-12 d-flex justify-content-center">
                <button class="btn btn-primary">Send OTP</button>
              </div>
              <br>
              <p style="text-align: center;">Already a user? <a href="/login">Login here</a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br><br>
<%- include('footer') %>


